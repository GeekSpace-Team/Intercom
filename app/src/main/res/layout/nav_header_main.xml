<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >



    <LinearLayout
        android:background="@drawable/navbg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:paddingLeft="20dp">
        <TextView
            android:id="@+id/username"
            android:layout_marginTop="65dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="@string/nav_header_title"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#D6DEE1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:textColor="#D6DEE1"
            android:id="@+id/textView"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dgyuew7wwcehdyeyfyueryferyfuyerfuye" />
    </LinearLayout>



    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp">
           <ImageView

               android:layout_width="30dp"
               android:layout_height="30dp"
               app:tint="#737373"
               android:src="@drawable/ic_baseline_volume_up_24"
               />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#000"
            android:layout_weight="1"
            android:text="Gürleýji"
            android:layout_marginLeft="20dp" />

        <Switch
            android:id="@+id/speaker"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="12dp" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp">
        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="#737373"
            android:src="@drawable/ic_baseline_chat_bubble_outline_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#000"
            android:layout_weight="1"
            android:text="Ses derňewi"
            android:layout_marginLeft="20dp" />

        <Switch
            android:id="@+id/voice_detection"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="12dp" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp">
        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="#737373"
            android:src="@drawable/ic_baseline_notifications_none_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#000"
            android:layout_weight="1"
            android:text="Ses effekti"
            android:layout_marginLeft="20dp" />

        <Switch
            android:id="@+id/soundeffetct"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="12dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="#808080"
        />
    <LinearLayout
        android:id="@+id/settings"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp">
        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="#737373"
            android:src="@drawable/ic_outline_settings_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#000"
            android:layout_weight="1"
            android:text="Sazlamalar"
            android:layout_marginLeft="20dp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="#808080"
        />

    <LinearLayout
        android:id="@+id/exit"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp">
        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="#737373"
            android:src="@drawable/ic_baseline_exit_to_app_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#000"
            android:layout_weight="1"
            android:text="Çykmak"
            android:layout_marginLeft="20dp" />


    </LinearLayout>
</LinearLayout>